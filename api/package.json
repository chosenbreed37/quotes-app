{
  "name": "quotes-api-node",
  "version": "0.1.0",
  "description": "The finest selection of curated quotes",
  "scripts": {
    "start": "NODE_ENV=live nodemon ./server.js --exec babel-node",
    "start:win": "set NODE_ENV=dev nodemon ./server.js --exec babel-node",
    "start:dev": "NODE_ENV=dev nodemon ./server.js --exec babel-node",
    "build": "babel . -d dist --presets es2015,stage-2 --ignore spec.js,node_modules,dist",
    "post:build":"cp ./services/*.json dist/services(",
    "serve": "set serverPort=5005 && node dist/server.js",
    "start_babel_dev": "babel-node ./server.js --preset=babel-preset-es2015",
    "start_babel": "NODE_ENV=live babel-node ./server.js --preset=babel-preset-es2015",
    "start_babel:win": "set NODE_ENV=dev && babel-node ./server.js --preset=babel-preset-es2015",
    "test": "serverPort=3001 ava",
    "dev": "npm-run-all --parallel start test",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chosenbreed37/quotes-api-node.git"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "Express"
  ],
  "author": "chosenbreed37 <chosenbreed@gmail.com>",
  "dependencies": {
    "ava": "^0.22.0",
    "ava-http": "^0.2.1",
    "body-parser": "^1.15.2",
    "cors": "^2.8.0",
    "express": "4.14.0",
    "lodash": "^4.15.0",
    "mongoose": "^4.8.6",
    "morgan": "^1.8.2",
    "npm-run-all": "^4.1.1",
    "request": "^2.83.0",
    "restler": "^3.4.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-inline-import": "^2.0.1",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-react": "^6.4.1",
    "nodemon": "^1.9.1"
  },
  "ava": {
    "source": [
      "**/*.{js}",
      "!dist/**/*"
    ],
    "color": true,
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "tap": false,
    "powerAssert": false,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "verbose": true,
    "babel": "inherit"
  }
}
